<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.wgl.supermarket.domain.Customer" table="tb_customer">
		<id name="id" column="id" type="java.lang.Integer" length="10">
			<generator class="increment"/>
		</id>
		<property name="customerName" column="customername" type="java.lang.String" length="50"/>
		<property name="zip" column="zip" type="java.lang.String" length="6"/>
		<property name="address" column="address" type="java.lang.String" length="50"/>
		<property name="telephone" column="telephone" type="java.lang.String" length="20"/>
		<property name="connectionPerson" column="connectionperson" type="java.lang.String" length="20"/>
		<property name="phone" column="phone" type="java.lang.String" length="20"/>
		<property name="email" column="email" type="java.lang.String" length="50"/>
		<property name="available" column="available" type="java.lang.Integer" length="4"/>
	</class>
</hibernate-mapping>